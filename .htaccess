# Prevent access to .env file
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

# Prevent directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8

# PHP settings (if allowed)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

